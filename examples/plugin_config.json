{
  "name": "config-based-hooks",
  "version": "1.0.0",
  "type": "hook",
  "description": "Example hooks defined via configuration",
  "author": "User",
  "license": "MIT",
  "hooks": [
    {
      "name": "check-file-size",
      "description": "Check that files are not too large",
      "command": ["find", ".", "-size", "+1M", "-type", "f"],
      "file_patterns": ["*"],
      "timeout": 30,
      "stage": "fast",
      "requires_files": false,
      "parallel_safe": true
    },
    {
      "name": "security-scan",
      "description": "Run a security scan on Python files",
      "command": ["bandit", "-f", "json"],
      "file_patterns": ["*.py"],
      "timeout": 120,
      "stage": "comprehensive",
      "requires_files": true,
      "parallel_safe": true
    }
  ]
}
