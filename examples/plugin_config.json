{
  "author": "User",
  "description": "Example hooks defined via configuration",
  "hooks": [
    {
      "command": [
        "find",
        ".",
        "-size",
        "+1M",
        "-type",
        "f"
      ],
      "description": "Check that files are not too large",
      "file_patterns": [
        "*"
      ],
      "name": "check-file-size",
      "parallel_safe": true,
      "requires_files": false,
      "stage": "fast",
      "timeout": 30
    },
    {
      "command": [
        "bandit",
        "-f",
        "json"
      ],
      "description": "Run a security scan on Python files",
      "file_patterns": [
        "*.py"
      ],
      "name": "security-scan",
      "parallel_safe": true,
      "requires_files": true,
      "stage": "comprehensive",
      "timeout": 120
    }
  ],
  "license": "MIT",
  "name": "config-based-hooks",
  "type": "hook",
  "version": "1.0.0"
}
